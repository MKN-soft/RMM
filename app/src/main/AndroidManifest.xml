<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pz2015.habits.rmm" >

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Billing permission -->
    <uses-permission android:name="com.android.vending.BILLING" />
    <!-- Wakelock permission -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.login_and_registration.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".activity.HabitDetailActivity"
            android:label="@string/title_activity_habit_detail" >
        </activity>
        <activity
            android:name=".activity.AddHabitActivity"
            android:label="@string/title_activity_add_habit" >
        </activity>
        <activity
            android:name=".activity.DeleteHabitActivity"
            android:label="@string/title_activity_delete_habit" >
        </activity>
        <activity
            android:name=".activity.EditHabitActivity"
            android:label="@string/title_activity_edit_habit" >
        </activity>
        <activity
            android:name=".activity.EditImageActivity"
            android:label="@string/title_activity_edit_image"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".activity.AddImageActivity"
            android:label="Choose Image"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".activity.ScheduleActivity"
            android:label="Schedule"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".activity.CalendarActivity"
            android:label="Calendar">
        </activity>

        <service android:name=".services.SynchroService" />

    </application>

</manifest>
